{
  "name": "air-finance-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "yarn workspace @air-finance/web dev",
    "dev:mobile": "yarn workspace @air-finance/mobile-webview start:tunnel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.6"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "prettier --write",
      "turbo run lint",
      "turbo run type-check",
      "turbo run build"
    ]
  },
  "packageManager": "yarn@4.0.0",
  "engines": {
    "node": ">=24.x"
  }
}
